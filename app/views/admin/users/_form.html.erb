    <div id="Box_register_form">	
		<%= form_for [:admin, @user] do |f| %>
		<div class="field">
			<%= f.label :name, "Nome" %>
			<%= f.text_field :name %>
		</div>
		<div class="field">
			<%= f.label :last_name, "Sobrenome" %>
			<%= f.text_field :last_name %>
		</div>
		<div class="field">
			<%= f.label :email, "E-mail" %>
			<%= f.text_field :email %>
		</div>
		<div class="field">
			<%= f.label :password, "Senha" %>
			<%= f.password_field :password %>
		</div>
		<div class="field">
			<%= f.label :password_confirmation, "Confirmar Senha" %>
			<%= f.password_field :password_confirmation %>
		</div>		
		<div id="Box_register_form_regras">
		  <h1>Regras</h1><br />
		  <p>
			Tipo:<br />
			<%= f.radio_button :role, :admin%>Administrador<br/>
			<%= f.radio_button :role, :supervisor %>Supervisor<br/>
			<%= f.radio_button :role, :user %>Usu√°rio<br/>
		  </p><br />
		</div>
  		<p><%= f.submit "Atualizar", :class => "Bt_enviar" %></p>
		<%end%>
	</div>
