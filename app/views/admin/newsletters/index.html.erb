<% title  "Admin/Newsletters" %>

<h1>Emails</h1><br />
<p>Verifique abaixo a lista dos emails no sistema.</p><br />
<br />
<p style="text-align: right;"><%= submit_tag "+ Criar novo",:type=>"button",:onclick=>"window.open('"+new_admin_newsletter_path+"','_self');", :class => "Bt_enviar"%> </p>
<br />
<table cellspacing="0" class="tablesorter">
  <thead> 
  <tr>
    <th style="width:50%;">Nome</th>
    <th colspan="3" style="width:50%;">Ações</th>
  </tr>
  </thead> 
  <tbody>
  <% for newsletter in @newsletters %>
    <tr>
      <td><%= newsletter.email %></td>

      <td><%= link_to "Visualizar", [:admin, newsletter] %></td>
      <td><%= link_to "Editar", edit_admin_newsletter_path(newsletter) %></td>
      <td><%= link_to "Excluir", [:admin, newsletter], :confirm => 'Are you sure?', :method => :delete %></td>

    </tr>
  <% end %>
  </tbody>
</table>


