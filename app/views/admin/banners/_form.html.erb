<% content_for :head do %>
<%= include_tiny_mce_if_needed %>
<% end %>
<div id="Box_form">
<%= form_for [:admin, @banner], :html => { :multipart => true } do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :texto %><br />
    <%= f.text_area :texto %>
  </p>
<br />  
  <p>
    <%= f.label :link %><br />
    <%= f.text_field :link %>
  </p>
 <br /> 

  <p>
    <%= f.label :imgbanner %><br />
    <%= f.file_field :imgbanner %>
  </p>
 <br /> 

 
  <p><%= submit_tag "Voltar",:type=>"button",:onclick=>"window.open('"+admin_banners_path+"','_self');", :class => "Bt_enviar", :style=>"margin-right: 5px;"%> <%= f.submit "Salvar", :class => "Bt_enviar" %></p>
<% end %>
</div>

